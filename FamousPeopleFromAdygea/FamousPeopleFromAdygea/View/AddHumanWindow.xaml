<Window x:Class="FamousPeopleFromAdygea.View.AddHumanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamousPeopleFromAdygea.View"
        mc:Ignorable="d"
        Title="AddHumanWindow"
        Height="800"
        Width="500"
        MinHeight="800"
        MinWidth="500"
        Background="#FFE9FBE6"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15,20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="200" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="addFirstName"
               Content="Имя:"
               HorizontalAlignment="Center"
               FontSize="18" />
        <Label x:Name="addSurname"
               Content="Фамилия:"
               Grid.Row="1"
               HorizontalAlignment="Center"
               FontSize="18" />
        <Label x:Name="addPatronymic"
               Content="Отчество:"
               Grid.Row="2"
               HorizontalAlignment="Center"
               FontSize="18" />
        <Label Content="Дата рождения:"
               Grid.Row="3"
               HorizontalAlignment="Center"
               FontSize="18" />
        <Label Content="Дата смерти:"
               Grid.Row="4"
               HorizontalAlignment="Center"
               FontSize="18" />
        <Label Content="Описание:"
               Grid.Row="5"
               HorizontalAlignment="Center"
               FontSize="18" />


        <TextBox x:Name="tbFirstName"
                 VerticalAlignment="Bottom"
                 Margin="50,0"
                 FontSize="18"
                 />
        <TextBox x:Name="tbSurname"
                 VerticalAlignment="Bottom"
                 Margin="50,0"
                 Grid.Row="1"
                 FontSize="18"
                 />
        <TextBox x:Name="tbPatronymic"
                 VerticalAlignment="Bottom"
                 Margin="50,0"
                 Grid.Row="2"
                 FontSize="18"
                 />
        <DatePicker x:Name="dpDeathDate"
                    VerticalAlignment="Bottom"
                    Margin="50,0"
                    FontSize="18"
                    Grid.Row="4"
                     />
        <DatePicker x:Name="dpBirthDate"
                    VerticalAlignment="Bottom"
                    Margin="50,0"
                    Grid.Row="3"
                    
                    FontSize="18"
                    >
        </DatePicker>
        <TextBox x:Name="tbDes"
                 Margin="50,50,50,0"
                 Grid.Row="5"
                 FontSize="18"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                />
        <Label Content="Введите путь для фотографии:"
               Grid.Column="0"
               Grid.Row="6"
               Grid.ColumnSpan="3"
               HorizontalAlignment="Center"
               FontSize="18"
               Margin="0" />
        <TextBox x:Name="pathTB"
                 Grid.Row="6"
                 FontSize="18"
                 Grid.Column="0"
                 VerticalAlignment="Bottom"
                 Grid.ColumnSpan="3"
                 Margin="50,0" />

        <Button x:Name="addPathBtn"
                Content="Добавить путь"
                Grid.Row="7"
                Grid.Column="1"
                FontSize="18"
                Width="160"
                Height="40"
                
                Click="addPathBtn_Click" />

        <Button x:Name="btnSave"
                Grid.Row="8"
                Content="Сохранить"
                Margin="60, 0"
                FontSize="20"
                Click="btnSave_Click" />
    </Grid>
</Window>